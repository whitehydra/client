<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="textInputStyle">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/DefaultButtons</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="toolBarStyle" parent="Theme.AppCompat">

        <item name="android:textStyle">normal</item>
        <item name="android:textSize">8sp</item>

        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="toolBarStyle.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="DefaultButtons" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
