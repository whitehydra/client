<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.DefaultTheme">
        <item name="android:windowBackground">@color/background_default</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="themeTextDefault">@color/text_default</item>
        <item name="themeTextHeadline">@color/text_headline</item>
        <item name="themeTextPole">@color/text_pole</item>


        <item name="android:textSize">14sp</item>

    </style>


    <style name="AppTheme.NightTheme">
        <item name="android:windowBackground">@color/background_night</item>

        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>
        <item name="colorControlNormal">@color/colorAccent_night</item>


        <item name="themeTextDefault">@color/text_default_night</item>
        <item name="themeTextHeadline">@color/text_headline_night</item>
        <item name="themeTextPole">@color/text_pole_night</item>
    </style>


    <style name="AppTheme.DefaultTheme.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.DefaultTheme.Normal">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.DefaultTheme.Big">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AppTheme.NightTheme.Small">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.NightTheme.Normal">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.NightTheme.Big">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <attr name="themeTextDefault" format="reference" />
    <attr name="themeTextHeadline" format="reference" />
    <attr name="themeTextPole" format="reference" />


    <!-- ////////////////////////////////////////////////////////////////////////////////////// -->


    <!-- Изображения -->

    <style name="logo">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="avatar">
        <item name="android:padding">5dp</item>
        <item name="android:src">@color/colorAccent</item>
    </style>


    <!-- Тулбар -->

    <style name="toolBarStyle" parent="Theme.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
    </style>

    <style name="toolBarStyle.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Текст -->

    <style name="text">
        <item name="android:textColor">?themeTextDefault</item>
        <item name="android:textAppearance">@style/AppTheme.NightTheme</item>
    </style>


    <style name="text.Splash">
        <item name="android:layout_marginTop">84dp</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="text.Login">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text.Login.Username">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="text.Login.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:imeActionId">6</item>
        <item name="android:imeActionLabel">@string/action_sign_in</item>
        <item name="android:imeOptions">actionUnspecified</item>
    </style>

    <style name="text.Login.Progress">
        <item name="android:gravity">center</item>
    </style>


    <style name="text.Profile"></style>

    <style name="text.Profile.Name">
        <item name="android:textColor">?themeTextPole</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.Profile.Position">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text.Profile.Tag">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="text.Profile.Value">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?themeTextPole</item>
    </style>


    <style name="text.Upload">

    </style>

    <style name="text.Upload.Name">
        <item name="android:inputType">text</item>
        <item name="android:lines">3</item>
        <item name="android:maxLines">3</item>
        <item name="android:minLines">3</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="text.Upload.File">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:ems">10</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="text.Upload.Tag"></style>

    <style name="text.Upload.Value"></style>


    <style name="text.Portfolio"></style>

    <style name="text.Portfolio.Tag"></style>

    <style name="text.Portfolio.Value"></style>

    <style name="text.Portfolio.FileTag">
        <item name="android:layout_weight">0</item>
    </style>

    <style name="text.Portfolio.FileName">
        <item name="android:layout_weight">1</item>
    </style>


    <style name="text.OpenFileItem"></style>

    <style name="text.PortfolioListItem"></style>

    <style name="text.PortfolioListItem.Category">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text.PortfolioListItem.DateType"></style>

    <style name="text.UsersListItem">

    </style>

    <style name="text.PortfolioListItem.Name">
        <item name="android:gravity">center</item>
    </style>

    <style name="text.About">

    </style>
    <style name="text.About.Name">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="text.About.Version">
        <item name="android:textColor">?themeTextPole</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <!-- Кнопки -->

    <style name="button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_rounded_corner</item>
    </style>


    <style name="button.Login"></style>

    <style name="button.Login.Sign">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button.Login.Recovery"></style>


    <style name="button.Upload"></style>

    <style name="button.Upload.File"></style>

    <style name="button.Upload.OpenClose"></style>

    <style name="button.Upload.Add"></style>


    <style name="button.Portfolio"></style>

    <style name="button.Portfolio.File"></style>

    <style name="button.Portfolio.Update"></style>


    <style name="button.PortfolioListItem">
        <item name="android:layout_weight">0</item>
        <item name="android:focusable">false</item>
    </style>



    <style name="button.UsersListItem">
        <item name="android:layout_weight">0</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="button.PIN">
        <item name="android:background">@drawable/button_pin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="button.Edit">

    </style>


    <!-- Layouts -->

    <style name="layout"></style>


    <style name="layout.Login">
        <item name="android:orientation">vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>


    <style name="layout.Home">
        <item name="android:layout_gravity">bottom</item>
    </style>


    <style name="layout.Profile"></style>

    <style name="layout.Profile.Background">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="layout.Profile.Head">
        <item name="android:elevation">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="layout.Profile.BaseInfo">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout.Profile.String">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="layout.PortfolioList"></style>

    <style name="layout.PortfolioList.Background"></style>

    <style name="layout.PortfolioList.Head">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="layout.PortfolioList.Body">
        <item name="android:layout_marginBottom">30dp</item>
    </style>


    <style name="layout.Upload"></style>

    <style name="layout.Upload.Background">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="layout.Upload.String">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="layout.Portfolio"></style>

    <style name="layout.Portfolio.Background"></style>

    <style name="layout.Portfolio.String">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="layout.PortfolioListItem">

    </style>

    <style name="layout.PortfolioListItem.Background">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout.PortfolioListItem.Body">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="layout.UsersListItem">

    </style>
    <style name="layout.UsersListItem.Background">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="layout.UsersListItem.Body">
        <item name="android:layout_weight">1</item>
    </style>



    <style name="layout.Edit"></style>

    <style name="layout.Edit.Background">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">15dp</item>

    </style>

    <style name="layout.Edit.String">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>




    <!-- ////////////////////////////////////////////////////////////////////////////////////// -->

</resources>
