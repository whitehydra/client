<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    style="@style/layout.PortfolioListItem.Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ltCategory"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="@string/default_text"
            style="@style/text.PortfolioListItem.Category"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/layout.PortfolioListItem.Body">

            <TextView
                android:id="@+id/ltDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                style="@style/text.PortfolioListItem.DateType"/>

            <TextView
                android:id="@+id/ltType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                style="@style/text.PortfolioListItem.DateType"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/ltClose"
            style="@style/button.PortfolioListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete_black_24dp"
            android:text="@string/list_element_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ltName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_text"
            style="@style/text.PortfolioListItem.Name"/>

    </LinearLayout>

</LinearLayout>
