<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:paddingBottom="35dp"
    tools:context=".UploadFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/uploadLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- TODO: Update blank fragment layout -->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/upNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Описание"
                    android:inputType="text"
                    android:lines="3"
                    android:maxLines="3"
                    android:minLines="3"
                    android:singleLine="false" />

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upCategoryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Категория:" />

                <Spinner
                    android:id="@+id/upCategorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upCriterionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Критерий получения:" />

                <RadioGroup
                    android:id="@+id/upRadioButtons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upTypeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тип участия:" />

                <Spinner
                    android:id="@+id/upTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upDateEventBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upDateEventText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дата проведения" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/upDateEventPole"
                        style="00:00:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00 Янв 2018" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/upDatePublicationBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/upDatePublicationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Дата публикации" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/upDatePublicationPole"
                        style="00:00:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00 Янв 2018" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upFileLoadBlock1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upFileLoadText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Выбор файла" />

                    <EditText
                        android:id="@+id/upFileLoadPole1"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName"
                        android:text="..." />

                </LinearLayout>

                <Button
                    android:id="@+id/upFileLoadButton1"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:text="Поиск" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/upFileLoadBlock2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/upFileLoadText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Выбор дополнительного файла" />

                    <EditText
                        android:id="@+id/upFileLoadPole2"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:inputType="textPersonName"
                        android:text="..." />

                </LinearLayout>

                <Button
                    android:id="@+id/upFileLoadButton2"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:text="Поиск" />
            </LinearLayout>

            <Button
                android:id="@+id/upOpenCloseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить" />

            <Button
                android:id="@+id/upUploadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузка портфолио" />



        </LinearLayout>
    </ScrollView>


</LinearLayout>


